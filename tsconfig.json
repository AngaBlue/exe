{
  "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "newLine": "lf",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots": [
          "node_modules/@types",
          "src/@types"
      ],
  }
}
